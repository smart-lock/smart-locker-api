{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": false,
    "noUnusedLocals": true,
    "paths": {
      "~/*": ["./*"]
    },
    "lib": ["dom", "es2015", "esnext.asynciterable"],
  },
  "exclude": [
    "node_modules/"
  ]
}